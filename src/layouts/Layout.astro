---
import Socials from "../components/Socials.astro"
import Nav from "../components/Nav.astro"
import SEO from "../components/SEO.astro"

export interface Props {
  title: string
}

const { title } = Astro.props
const generator = Astro.generator
---

<!doctype html>
<html class="scroll-smooth" lang="en">
  <head>
    <SEO />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/images/scott_at_work_icon.png"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Nav />
  <body>
    <slot />
    <footer
      class="mx-auto flex w-full max-w-[792px] items-center gap-4 px-4 pt-8 sm:p-6"
    >
      <Socials />
      <div class="w-full"></div>
      <span class="min-w-fit text-xs"
        >ðŸš€ <a
          href="https://astro.build"
          rel="noopener noreferrer"
          class="link text-gradient hover:text-niceBlue">{generator}</a
        ></span
      >
    </footer>
    <style is:global>
      @import "../styles/global.css";
    </style>
  </body>
</html>
